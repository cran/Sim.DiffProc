citHeader("To cite package 'Sim.DiffProc' in publications use:")
     
	 
 if(!exists("meta") || is.null(meta)) meta <- packageDescription("Sim.DiffProc")
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
		  title = "Sim.DiffProc: Simulation of Diffusion Processes.",
		  author = personList(as.person("A.C. Guidoum"),as.person("K. Boukhetala")),
		  year = year,
		  note = vers,
		  url  = paste("URL http://CRAN.R-project.org/package=Sim.DiffProc"),
		  textVersion =
		  paste("A.C. Guidoum and K. Boukhetala (",
				year,
				"). Sim.DiffProc: Simulation of Diffusion Processes.", vers, ".", "http://CRAN.R-project.org/package=Sim.DiffProc"
				, sep=""))
				